bundle agent inventory_main_file_control
{
  vars:
      "inputs"
      slist => {
		 "$(this.promise_dirname)/ntp/main.cf",
      };
}

body file control
{
      inputs => { @(inventory_main_file_control.inputs) };
}

bundle agent inventory_main
{
  methods:
      "NTP"
      usebundle => inventory_ntp_main;
      }
